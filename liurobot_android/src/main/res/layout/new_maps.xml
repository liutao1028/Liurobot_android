<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background" >

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button"
        android:text="测试-use" />

    <Button
        android:id="@+id/btn_newmap_back"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/button"
        android:text="返回" />

    <Button
        android:id="@+id/btn_savemap"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/button"
        android:text="保存" />

    <EditText
        android:id="@+id/et_map_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_map_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="请输入地图描述"
        android:ems="10" 
        android:singleLine="true"
        >

    </EditText>

    <EditText
        android:id="@+id/et_map_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_map_mess"
        android:layout_alignParentTop="true"
        android:layout_marginTop="188dp"
        android:ems="10"
        android:hint="请输入地图名称"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

</RelativeLayout>